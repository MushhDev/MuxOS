{
  "name": "MuxOS Velocity",
  "version": "2.0",
  
  "colors": {
    "primary": "#7c3aed",
    "secondary": "#a855f7",
    "accent": "#22d3ee",
    "success": "#34d399",
    "warning": "#fbbf24",
    "error": "#f87171",
    
    "gradient_start": "#0c0a1d",
    "gradient_mid": "#1e1b4b",
    "gradient_end": "#0f172a",
    
    "bg_dark": "#09090f",
    "bg_medium": "#12121c",
    "bg_light": "#1c1c2e",
    "bg_card": "#242438",
    "bg_elevated": "#2a2a42",
    
    "text_primary": "#fafafa",
    "text_secondary": "#a1a1aa",
    "text_muted": "#52525b",
    
    "border": "#27273a",
    "border_subtle": "#1f1f2e",
    "border_focus": "#7c3aed",
    "border_glow": "#a855f7",
    
    "panel_bg": "rgba(9, 9, 15, 0.88)",
    "menu_bg": "rgba(18, 18, 28, 0.95)",
    "tooltip_bg": "rgba(36, 36, 56, 0.98)",
    "overlay_bg": "rgba(0, 0, 0, 0.6)"
  },
  
  "gradients": {
    "main": "linear-gradient(135deg, #0c0a1d 0%, #1e1b4b 40%, #0f172a 100%)",
    "accent": "linear-gradient(135deg, #7c3aed 0%, #a855f7 50%, #22d3ee 100%)",
    "success": "linear-gradient(135deg, #34d399 0%, #22d3ee 100%)",
    "gaming": "linear-gradient(135deg, #a855f7 0%, #ec4899 50%, #fb923c 100%)",
    "panel": "linear-gradient(180deg, rgba(9,9,15,0.92) 0%, rgba(18,18,28,0.88) 100%)",
    "button": "linear-gradient(135deg, #7c3aed 0%, #a855f7 100%)",
    "button_hover": "linear-gradient(135deg, #8b5cf6 0%, #c084fc 100%)",
    "card": "linear-gradient(145deg, #1c1c2e 0%, #242438 100%)",
    "glow": "radial-gradient(circle, rgba(124,58,237,0.3) 0%, transparent 70%)"
  },
  
  "fonts": {
    "family": "Inter, Noto Sans, sans-serif",
    "family_mono": "JetBrains Mono, Fira Code, monospace",
    "size_xs": "10px",
    "size_sm": "12px",
    "size_base": "14px",
    "size_lg": "16px",
    "size_xl": "20px",
    "size_2xl": "24px",
    "size_3xl": "32px",
    "weight_normal": "400",
    "weight_medium": "500",
    "weight_bold": "700"
  },
  
  "spacing": {
    "xs": "4px",
    "sm": "8px",
    "md": "12px",
    "lg": "16px",
    "xl": "24px",
    "2xl": "32px"
  },
  
  "borders": {
    "radius_sm": "4px",
    "radius_md": "8px",
    "radius_lg": "12px",
    "radius_xl": "16px",
    "radius_full": "9999px",
    "width": "1px"
  },
  
  "shadows": {
    "sm": "0 1px 2px rgba(0, 0, 0, 0.3)",
    "md": "0 4px 6px rgba(0, 0, 0, 0.4)",
    "lg": "0 10px 15px rgba(0, 0, 0, 0.5)",
    "xl": "0 20px 25px rgba(0, 0, 0, 0.6)",
    "glow": "0 0 20px rgba(99, 102, 241, 0.4)",
    "glow_accent": "0 0 20px rgba(6, 182, 212, 0.4)"
  },
  
  "animations": {
    "duration_fast": "150ms",
    "duration_normal": "250ms",
    "duration_slow": "400ms",
    "easing": "cubic-bezier(0.4, 0, 0.2, 1)",
    "easing_bounce": "cubic-bezier(0.68, -0.55, 0.265, 1.55)"
  },
  
  "wallpaper": {
    "path": "/usr/share/backgrounds/muxos-gradient.png",
    "style": "fill",
    "blur": false,
    "dim": 0
  },
  
  "panel": {
    "height": 42,
    "position": "bottom",
    "opacity": 0.92,
    "blur": true
  },
  
  "window": {
    "border_width": 1,
    "title_height": 32,
    "opacity_inactive": 0.95,
    "opacity_active": 1.0
  }
}
