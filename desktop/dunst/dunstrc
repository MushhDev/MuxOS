# MuxOS Velocity 2.0 - Dunst Notification Theme
# Modern glassmorphism design with purple accents

[global]
    # Display settings
    monitor = 0
    follow = mouse
    
    # Geometry
    width = (320, 420)
    height = 180
    origin = top-right
    offset = 16x56
    
    # Progress bar
    progress_bar = true
    progress_bar_height = 6
    progress_bar_frame_width = 0
    progress_bar_min_width = 180
    progress_bar_max_width = 380
    progress_bar_corner_radius = 3
    
    # Show indicator
    indicate_hidden = yes
    
    # Shrink window if smaller than width
    shrink = no
    
    # Transparency (0-100)
    transparency = 8
    
    # Padding
    padding = 18
    horizontal_padding = 22
    text_icon_padding = 18
    
    # Frame
    frame_width = 1
    frame_color = "#7c3aed"
    
    # Gap between notifications
    gap_size = 10
    
    # Separator
    separator_height = 1
    separator_color = "#27273a"
    
    # Sorting
    sort = yes
    
    # Idle threshold
    idle_threshold = 120
    
    # Font
    font = Inter 11
    
    # Line height
    line_height = 4
    
    # Markup
    markup = full
    format = "<b>%s</b>\n<span size='small'>%b</span>"
    
    # Alignment
    alignment = left
    vertical_alignment = center
    
    # Age
    show_age_threshold = 60
    
    # Word wrap
    word_wrap = yes
    
    # Ellipsize
    ellipsize = end
    
    # Ignore newlines
    ignore_newline = no
    
    # Stack duplicates
    stack_duplicates = true
    hide_duplicate_count = false
    
    # Show indicators
    show_indicators = yes
    
    # Icons
    icon_position = left
    min_icon_size = 48
    max_icon_size = 64
    icon_path = /usr/share/icons/Papirus-Dark/48x48/status/:/usr/share/icons/Papirus-Dark/48x48/devices/:/usr/share/icons/Papirus-Dark/48x48/apps/
    
    # History
    sticky_history = yes
    history_length = 30
    
    # Misc
    always_run_script = true
    title = Dunst
    class = Dunst
    
    # Corners
    corner_radius = 14
    
    # Mouse actions
    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = close_all

[experimental]
    per_monitor_dpi = false

